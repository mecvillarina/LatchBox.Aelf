@if (IsLoaded)
{
    <MudSpacer />
    if (!IsAuthenticated)
    {
        <MudButton OnClick="InvokeConnectWalletModal" Color="Color.Primary" Variant="Variant.Filled" Size="Size.Small">Connect Wallet</MudButton>
    }
    else
    {
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudChip Class="ml-1" Color="Color.Primary" Variant="Variant.Text" OnClick="@(() => InvokeClaimAsync("ELF"))">
                Claim ELF
            </MudChip>
            <MudChip Class="ml-1" Color="Color.Primary" Variant="Variant.Text" OnClick="@(() => InvokeClaimAsync("LATCH"))">
                Claim LATCH
            </MudChip>
        </MudHidden>

        <MudMenu Class="ml-3" Label="@WalletAddress.ToMask(6)" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight" StartIcon="@Icons.Material.Filled.ConnectedTv" EndIcon="@Icons.Material.Filled.KeyboardArrowDown" Variant="Variant.Filled" Color="Color.Secondary">
            <ChildContent>
                <MudHidden Breakpoint="Breakpoint.MdAndUp">
                    <MudMenuItem>Claim ELF</MudMenuItem>
                    <MudMenuItem>Claim LATCH</MudMenuItem>
                </MudHidden>

                <MudMenuItem OnClick="@(() => InvokeDisconnectWalletDialog())">Disconnect Wallet</MudMenuItem>
            </ChildContent>
        </MudMenu>
    }
}
