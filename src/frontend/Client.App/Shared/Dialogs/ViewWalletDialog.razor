<MudDialog DisableSidePadding="true" ClassActions="px-2 py-4">
    <DialogContent>
        <MudContainer MaxWidth="MaxWidth.False">
            <MudGrid Class="pt-0 pb-4" Spacing="2">
                <MudItem xs="12">
                    <div>
                        <MudText Typo="Typo.caption" Class="text-white mb-2"><b>Wallet Address</b></MudText>
                        <MudText Typo="Typo.body1" Class="text-limit-1">@WalletAddress</MudText>
                    </div>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="OnDisconnectAsync">Disconnect</MudButton>
    </DialogActions>
</MudDialog>